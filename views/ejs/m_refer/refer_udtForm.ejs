<!-- ckeditor -->
<script src="../../../public/build/ckeditor.js"></script>
<style>
   .ck.ck-editor__main>.ck-editor__editable:not(.ck-focused) {
      border-color: var(--ck-color-base-border);
      height: 40%;
   }

   .ck.ck-editor__editable:not(.ck-editor__nested-editable).ck-focused {
      height: 400px;
   }

   .ck.ck-editor__main>.ck-editor__editable:not(.ck-focused) {
      height: 400px;
   }
</style>
<main class="main">
   <!-- Breadcrumb-->
   <ol class="breadcrumb">
      <li class="breadcrumb-item">Home</li>
      <li class="breadcrumb-item">
         <a style="font-weight: bold;">게시판관리</a>
      </li>
      <li class="breadcrumb-item active">공지사항 수정</li>
      <!-- Breadcrumb Menu-->
   </ol>

   <div class="container-fluid">
      <div class="animated fadeIn">
         <div class="row">
            <div class="col-lg-6">
               <div class="card">
                  <div class="card-header">
                     <i class="fa fa-align-justify"></i> 공지사항 수정
                  </div>
                  <div class="card-body">
                     <!-- 컨텐츠 -->
                     <form name="udtForm" role="form">
                        <input type="hidden" id="noticeContent" name="noticeContent" value="">
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">글번호</label>
                           <div class="col-md-9">
                              <input class="form-control" id="noticeId" type="text" name="noticeId" readonly
                                 value="<%=result[0].noticeId%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">제목</label>
                           <div class="col-md-9">
                              <input class="form-control" id="noticeTitle" type="text" name="noticeTitle"
                                 value="<%=result[0].noticeTitle%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">내용</label>
                           <div class="col-md-9">
                              <textarea name="editor" class="editor" id="editor"><%-result[0].noticeContent %></textarea>
                           </div>
                        </div>
                        <!--option 버튼  -->
                        <div class="option_button" style="padding-left: 1.25rem; margin-bottom: 15px;">
                           <div>
                              <button class="btn btn-block btn-outline-success" type="button"
                                 id="update_btn">수정</button>
                           </div>
                           <div>
                              <button class="btn btn-block btn-outline-danger" type="button"
                                 onclick="location.href='/admin/m_notice/notice?page=1'">취소</button>
                           </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</main>

<script type="text/javascript">
   $(document).ready(function () {
      //ckeditor
      ClassicEditor
         .create(document.querySelector('#editor'), {
            language: 'ko'
         })
         .then(newEditor => {
            editor = newEditor;
         })
         .catch(error => {
            console.error(error);
         });

      var formObj = $("form[name='udtForm']");
      // 수정 폼 연결
      $("#update_btn").on("click", function () {
         var noticeTitle = $("#noticeTitle").val();
         var content = editor.getData();

         if (noticeTitle == "") {
            alert("제목을 입력하세요.");
            $("#noticeTitle").focus();
            return false;
         }

         if (content == "") {
            alert("내용을 입력하세요.");
            $("#editor").focus();
            return false;
         }

         if (confirm("수정하시겠습니까?") == true) {
            $('input[name=noticeContent]').attr('value', content);
            formObj.attr("action", "noticeUpdate");
            formObj.attr("method", "post");
            formObj.submit();
            alert("수정되었습니다.");
         } else {
            return;
         }
      });
   })
</script>