	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" />
	<script type="text/javascript" src="/stylesheets/jquery/jquery-1.7.1.min.js"></script>
	<script type="text/javascript" src="/stylesheets/jquery/jquery-ui-1.8.16.custom.min.js"></script>
	<script type="text/javascript" src="/stylesheets/jquery/jquery.validate.js"></script>
	<script type="text/javascript" src="/stylesheets/jquery/jquery.form.js"></script>
	<script src="/stylesheets/js/common.js"></script>
</head>

<body style="background: #fff;">
	<div class="popup">
		<h2><span class="float_l">회원관리</span><img onclick="window.close();" src="../../images/btn_close.gif" alt=""
				class="float_r hand" /></h2>

		<div class="content">
			<table>
				<tr>
					<th>프로필사진</th>
					<% if(result.length > 0 && result[0].userImg != null && result[0].userImg != '') {%>
					<td><img src="../../../<%= result[0].userImg %>" alt="사진" width="117px" /></td>
					<% }else{ %>
					<td><img src="../../uploads/normal_img.jpg" alt="" width="117px" /></td>
					<% } %>
				</tr>
				<tr>
					<th>일련번호</th>
					<td>
						<%if(result[0].uid !=null && result[0].uid!='null' && result[0].uid!=''){%>
						<%=result[0].uid%>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th class="necessary">닉네임</th>
				<td>
					<%if(result[0].userNick !=null && result[0].userNick!='null' && result[0].userNick!=''){%>
						<%=result[0].userNick %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th class="necessary">이메일</th>
				<td>
					<%if(result[0].userEmail !=null && result[0].userEmail!='null' && result[0].userEmail!=''){%>
						<%=result[0].userEmail %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th>나이</th>
				<td>
					<%if(result[0].userAge !=null && result[0].userAge!='null' && result[0].userAge!=''){%>
						<%=result[0].userAge %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th>주소1</th>
				<td>
					<%if(result[0].userAdres1 !=null && result[0].userAdres1 !='null' && result[0].userAdres1!=''){%>
						<%=result[0].userAdres1%>
						<%}%>
				</td>
			</tr>

			<tr>
				<th>주소2</th>
				<td>
					<%if(result[0].userAdres2 !=null && result[0].userAdres2!='null' & result[0].userAdres2!=''){%>
						<%=result[0].userAdres2 %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th>학교</th>
				<td>
					<%if(result[0].userSchool !=null && result[0].userSchool!='null' && result[0].userSchool!=''){%>
						<%=result[0].userSchool %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th>포인트</th>
				<td>
					<%if(result[0].userPoint !=null && result[0].userPoint!='null' && result[0].userPoint!=''){%>
						<%=result[0].userPoint %>
						<%}%>
				</td>
			</tr>
			
			<tr>
				<th>계산점수</th>
				<td>
					<%if(result[0].userScore !=null && result[0].userScore!='null' && result[0].userScore!=''){%>
						<%=result[0].userScore %>
						<%}%>
				</td>
			</tr
			><tr>
				<th>상태</th>
				<td>
					<label><input type="radio" id="userStatus1" name="userStatus" disabled>일반회원</label>
					<label><input type="radio" id="userStatus2" name="userStatus" disabled>탈퇴회원</label>
					<% if(result.length > 0) {%>
						<input type="hidden" id="userStatusValue" value="<%=result[0].userStatus%>">
						<% } %>
					</td>

				</tr>

				<tr>
					<th>개인정보 동의여부</th>
					<td>
						<%if(result[0].userAgree !=null && result[0].userAgree!='null' && result[0].userAgree!=''){%>
						<% if (result[0].userAgree == '0'){%>
						동의
						<% } else if (result[0].userAgree == '1') {%>
						비동의
						<%}%>   
					   <%}%>
					</td>

				</tr>

				<tr>
					<th>권한</th>
					<td>
						<label><input type="radio" id="userAuth1" name="userAuth" disabled>일반회원</label>
						<label><input type="radio" id="userAuth2" name="userAuth" disabled>기업</label>
						<% if(result.length > 0) {%>
						<input type="hidden" id="userAuthValue" value="<%=result[0].userAuth%>">
						<% } %>
					</td>

				</tr>

			</table>

			<p class="btn">
				<form name="udtForm" role="form">
					<input type="hidden" name="uid" value="<%=result[0].uid%>">
					<button type="button" id="update_btn">수정</button>
					<!-- <button type="button" id="delete_btn">삭제</button> -->
				</form>
				<button class="btn_big_black hand" onclick="window.close();">취소</button>
			</p>
		</div>
	</div>

	<script>
		$(document).ready(function () {
			var formObj = $("form[name='udtForm']");
			// 수정 
			$("#update_btn").on("click", function () {
				formObj.attr("action", "userUdtForm");
				formObj.attr("method", "get");
				formObj.submit();
			})

			// 삭제
			// $("#delete_btn").on("click", function () {
			// 	formObj.attr("action", "userDelete");
			// 	formObj.attr("method", "get");
			// 	if (confirm("삭제하시겠습니까?") == true) {
			// 		alert("삭제되었습니다.");
			// 		formObj.submit();
			// 	} else {
			// 		return;
			// 	}
			// })
		})

		//check box
		if ($('#userAuthValue').val() == '0') {
			$('#userAuth1').prop("checked", true);
		} else if ($('#userAuthValue').val() == '1') {
			$('#userAuth2').prop("checked", true);
		};

		if ($('#userStatusValue').val() == '0') {
			$('#userStatus1').prop("checked", true);
		} else if ($('#userStatusValue').val() == '1') {
			$('#userStatus2').prop("checked", true);
		};
	</script>