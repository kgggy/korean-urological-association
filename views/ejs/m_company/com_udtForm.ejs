<link rel="stylesheet" type="text/css" href="../../../public/stylesheets/css/sub.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.min.css" />
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<!--주소api-->
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>

<script>
   window.onload = function () {
      document.getElementById("address_kakao").addEventListener("click", function () {
         new daum.Postcode({
            oncomplete: function (data) {
               // 팝업에서 검색결과 항목을 클릭했을때 실행할 코드를 작성하는 부분입니다.
               // 예제를 참고하여 다양한 활용법을 확인해 보세요.
               document.getElementById("address_kakao").value = data.address; // 주소 넣기
               document.querySelector("input[id=address_detail]").focus(); //상세입력 포커싱
            }
         }).open();
      });
   }
</script>

<main class="main">
   <!-- Breadcrumb-->
   <ol class="breadcrumb">
      <li class="breadcrumb-item">Home</li>
      <li class="breadcrumb-item">
         <a style="font-weight: bold;">회원관리</a>
      </li>
      <li class="breadcrumb-item active">회원정보</li>
      <!-- Breadcrumb Menu-->
   </ol>

   <div class="container-fluid">
      <div class="animated fadeIn">
         <div class="row">
            <div class="col-lg-6">
               <div class="card">
                  <div class="card-header">
                     <i class="fa fa-align-justify"></i> 기업 회원 수정</div>
                  <form action="" id="userForm" method="post">
                     <input type="hidden" id="comId" name="comId" value="<%=result[0].comId%>">
                     <div class="card-body">
                        <!-- 컨텐츠 -->
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">아이디</label>
                           <div class="col-md-9">
                              <input class="form-control" type="text" id="comNick" name="comNick" value="<%=result[0].comNick%>"
                                 class="inputId signup-input" />
                           </div>
                        </div>
                        <!-- <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">패스워드</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comPwd" type="text" name="comPwd" value="">
                           </div>
                        </div> -->
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">기업명</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comName" type="text" name="comName" value="<%=result[0].comName%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">사업자등록번호</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comNum" type="text" name="comNum" value="<%=result[0].comNum%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">회사주소</label>
                           <div class="col-md-9">
                              <input class="form-control" type="text" id="address_kakao" name="comAdres1"
                                 class="signup-input" value="<%=result[0].comAdres1%>" />
                              <input class="form-control" type="text" id="address_detail" name="comAdres2"
                                 class="inputName signup-input" value="<%=result[0].comAdres2%>" />
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">대표자명</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comPresiName" type="text" name="comPresiName" value="<%=result[0].comPresiName%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">담당자명</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comManagerName" type="text" name="comManagerName"
                                 value="<%=result[0].comManagerName%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">휴대폰번호</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comPhoneNum" type="text" name="comPhoneNum"
                                 placeholder="ex) 01012341234" value="<%=result[0].comPhoneNum%>">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">이메일</label>
                           <div class="col-md-9">
                              <input class="form-control" id="comEmail" type="text" name="comEmail" value="<%=result[0].comEmail%>">
                           </div>
                        </div>
                        <!--option 버튼  -->
                        <div class="option_button">
                           <div>
                              <button class="btn btn-block btn-outline-success" type="button"
                                 id="update_btn" onclick="userUpdate()">수정</button>
                           </div>
                           <div>
                              <button class="btn btn-block btn-outline-danger" type="button"
                              onclick="history.go(-1)"
                                 style="margin-bottom: 10px;">취소</button>
                           </div>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
</main>

<script type="text/javascript">
   //수정
   function userUpdate() {
      if (confirm("수정하시겠습니까?")) {
         $("#userForm").attr("action", "comUserUpdate");
         $("#userForm").submit();
         alert("수정이 완료되었습니다.");
      }
   }
</script>