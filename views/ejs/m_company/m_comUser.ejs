<style>
    .userTable thead tr .sorting:first-child::before,
    .userTable thead tr .sorting_asc:first-child::before,
    .userTable thead tr .sorting_asc:first-child::after,
    .userTable thead .sorting_desc:first-child:after,
    .userTable thead .sorting:first-child:after,
    .userTable thead .sorting:first-child {
        content: none !important;
        cursor: unset
    }
</style>
<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">
            <a style="font-weight: bold;">회원관리</a>
        </li>
        <li class="breadcrumb-item active">회원정보</li>
    </ol>

    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header"><i class="fa fa-align-justify"></i> 기업 회원 관리 </div>
                        <div class="card-body">
                            <div align="right">
                                <form name="userForm" action="" method="get" class="easydropdown">
                                    <input type="hidden" name="page" value="1">
                                    <select name="searchType1" class="dropdown">
                                        <option value="">동의여부</option>
                                        <option value="0" <%if(searchType1=="0"){%> selected="selected" <%}%>>동의</option>
                                        <option value="1" <%if(searchType1=="1"){%> selected="selected" <%}%>>비동의</option>
                                    </select>
                                    <% if(searchText != '') { %> <input class="searchbox" type="text" name="searchText"
                                            value="<%=searchText%>" />
                                        <% } else {%>
                                        <input class="searchbox" type="text" name="searchText"
                                            placeholder=" 이메일, 닉네임, 기업명" />
                                        <% } %>
                                        <button class="btn btn-block btn-outline-success" type="submit"
                                            id="searchAction" style="margin-bottom: 10px;">검색</button>
                                </form>
                            </div>

                            <table id="exampleTable" class="table userTable table-responsive-sm table-hover">
                                <colgroup>
                                    <col width="5%" />
                                    <col width="10%" />
                                    <col width="30%" />
                                    <col width="20%" />
                                    <col width="20%" />
                                    <col width="30%" />
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" name="chkAll" id="chkAll" /></th>
                                        <th>번호</th>
                                        <th>기업명</th>
                                        <th>대표자명</th>
                                        <th>담당자명</th>
                                        <th>이메일</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(results.length > 0) { %>
                                    <% for(var i = (page * page_num) - page_num; i < (page * page_num); i++) { 
                                        if(i > length){
                                            i++;
                                        } else { %>
                                    <tr class="pointer">
                                        <td><input type="checkbox" id="chk" name="chk" value="<%=results[i].comId %>" />
                                        </td>
                                        <td onclick="location.href='/admin/m_company/selectOne?comId=<%=results[i].comId%>'">
                                            <%=results[i].comId%>
                                        </td>
                                        <td onclick="location.href='/admin/m_company/selectOne?comId=<%=results[i].comId%>'">
                                            <%=results[i].comName%>
                                        </td>
                                        <td onclick="location.href='/admin/m_company/selectOne?comId=<%=results[i].comId%>'">
                                            <%= results[i].comPresiName %>
                                        </td>
                                        <td onclick="location.href='/admin/m_company/selectOne?comId=<%=results[i].comId%>'">
                                            <%= results[i].comManagerName %>
                                        </td>
                                        <td onclick="location.href='/admin/m_company/selectOne?comId=<%=results[i].comId%>'">
                                            <%= results[i].comEmail %>
                                        </td>
                                    </tr>
                                    <% } %>
                                    <% } %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="10">등록된 회원이 없습니다.</td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <div>
                                <div>
                                    <button id="enrollAction" class="btn btn-block btn-outline-success"
                                        style="width: 60px; display: inline-block;"
                                        onclick="location.href='/admin/m_company/join'">등록</button>
                                    <form name="udtForm" style="display: inline-block;">
                                        <input type="hidden" id="uid" name="uid" value="" />
                                        <button class="btn btn-block btn-outline-danger" type="button"
                                            id="delete_btn">삭제</button>
                                        <input class="btn btn-block btn-outline-success" type="button"
                                            id="excelFileExport" value="엑셀 다운로드"
                                            style="margin-bottom: 15px; width: 140px; display: inline-block;" />
                                    </form>
                                </div>
                                <div class="mt_20">
                                    <div class="paging" id="page_navi">
                                        <ul class="pagination customPaging">
                                            <li> <a href="/admin/m_company/page?page=1<%= keepSearch %>" class="num">
                                                    <<</a> </li> <li> <a <%if((page<last-1)||(page==1)){%><%} else {%>
                                                            href="/admin/m_company/page?page=<%= parseInt(page) - 1 %><%= keepSearch %>"
                                                            class="num" <% } %>>
                                                            <</a> </li>
                                                                <% for(var i = 0; i < results.length / page_num; i++){  %>
                                                                <li class="paging_on">
                                                                <a href="/admin/m_company/page?page=<%= i + 1 %><%= keepSearch %>"
                                                                    <%if(page==i+1){%>class="selected"
                                                                    <%}%> class="num"><%= i + 1 %></a> </li> <% } %>
                                                                    <li> <a <%if(page>last-1){%><%} else {%>
                                                                        href="/admin/m_company/page?page=<%= parseInt(page) + 1 %><%= keepSearch %>"
                                                                        class="num" <% } %>>></a></li>
                                            <li><a href="/admin/m_company/page?page=<%= last %><%= keepSearch %>" class="num">>></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>
<script>
    $(document).ready(function () {
        const formObj = $("form[name='udtForm']");
        // 삭제
        $("#delete_btn").on("click", function () {
            var chkArr = [];
            $("input[name=chk]:checked").each(function () {
                chkArr.push($(this).val());
            });
            // console.log(chkArr);
            $('#uid').val(chkArr);
            if (chkArr == "") {
                alert("삭제할 목록을 선택해주세요.");
                return false;
            }
            formObj.attr("action", "userDelete");
            formObj.attr("method", "get");
            if (confirm("삭제하시겠습니까?") == true) {
                alert("삭제되었습니다.");
                formObj.submit();
            } else {
                return false;
            }
        })
        const formObj2 = $("form[name='userForm']");
        //검색
        $("#searchAction").on("click", function () {
            formObj2.attr("action", "/admin/m_company/page");
            formObj2.attr("method", "get");
            formObj2.submit();
        })
       

        // 엑셀 다운로드
        $("#excelFileExport").on("click", function () {
            formObj2.attr("action", "userExcel");
            formObj2.attr("method", "get");
            formObj2.submit();
        })

    });

    // 선택
    $("#chkAll").click(function () {
        if ($("#chkAll").is(":checked"))
            $("input[name=chk]").prop("checked", true);
        else
            $("input[name=chk]").prop("checked", false);
    });
    $("input[name=chk]").click(function () {
        var total = $("input[name=chk]").length;
        var checked = $("input[name=chk]:checked").length;
        if (total != checked)
            $("#chkAll").prop("checked", false);
        else
            $("#chkAll").prop("checked", true);
    });
</script>