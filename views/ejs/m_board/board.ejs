<form id="boardForm" name="boardForm" method="post" action="" onsubmit="return false;" autocomplete="off">
    <div class="board_search">
        <%if(results.length == 0){%>
        <h3 class="float_l" id="category_title"></h3>
        <%} else {%>
        <h3 class="float_l" id="category_title"><%=results[0].boardName%></h3>
        <% } %>
    </div>
    <div class="board_list">
        <form action="/admin/m_board/search" method="get">
            <input type="hidden" name="page" value="1">
            <select name="searchType">
                <% if(searchType != null) { %>
                <option value="writTitle" <%if(searchType=="writTitle"){%> selected="selected" <%}%>>제목</option>
                <option value="userNick" <%if(searchType=="userNick"){%> selected="selected" <%}%>>작성자</option>
                <% } else {%> <option value="writTitle">제목</option>
                <option value="userNick">작성자</option>
                <% } %>
            </select>
            <% if(searchText != null) { %>
            <input type="text" name="searchText" value="<%=searchText%>" />
            <% } else {%>
            <input type="text" name="searchText" />
            <% } %>
            <button type="submit" id="searchAction">검색</button>
        </form>

        <table>
            <colgroup>
                <col width="7%" />
                <col width="8%" />
                <col width="8%" />
                <col width="15%" />
                <col width="8%" />
                <col width="10%" />
                <col width="11%" />
                <col width="15%" />
            </colgroup>
            <thead>
                <tr>
                    <th></th>
                    <th>작성자</th>
                    <th>우선순위</th>
                    <th>제목</th>
                    <th>조회수</th>
                    <th>등록일</th>
                    <th>수정일</th>
                    <th>비고</th>
                </tr>
            </thead>
            <tbody>
                <% if(results.length > 0) { %>
                    <% for(var i = (page * page_num) - page_num; i < (page * page_num); i++) { 
                        if(i > length){
                            i++;
                         } else { %>
                <tr>
                    <input type="hidden" id="writId" name="writId" value="<%=results[i].writId%>" />
                    <td><input type="checkbox" id="chk" name="chk" value="<%=results[i].writId %>" /></td>
                    <td><%=results[i].userNick%></td>
                    <td><%=results[i].writRank%></td>
                    <td><%=results[i].writTitle%></td>
                    <td><%=results[i].writHit %></td>
                    <td><%=results[i].writDatefmt%></td>
                    <td><%=results[i].writUpdDatefmt%></td>
                    <td>
                        <button
                            onclick="selectOne('/admin/m_board/selectOne', '', 'width=640, height=700, scrollbars=1', '<%=results[i].writId%>', '')">상세보기</button>
                    </td>
                </tr>
                <% } %>
                <% } %>
                <% } %>
                <% if(results.length == 0){ %>
                <tr>
                    <td colspan="8">
                        등록된 목록이 없습니다.
                    </td>
                </tr>
                <% } %>
				</tbody>
			</table>
		</div>
	</form>
	<div class="mt_20">
        <div class="paging" id="page_navi">
            <ul>
                <li class="paging_on">
                    <% for(var i = 0; i < results.length / page_num; i++){  %>
                    <a href="/admin/m_board/all?boardId=<%= results[0].boardId %>&page=<%= i + 1 %>"><%= i + 1 %></a>
                    <% } %>
                </li>
            </ul>
        </div>
		<p class="float_r">
            <!-- 나중에 boardId랑 uid(admin) 고쳐줘야함!!!!!!!!!!!!!!!!!!!!-->
            <% if(results.length > 0){ %>
            <button onclick="enroll('/admin/m_board/writForm', '', 'width=640, height=700, scrollbars=1', '<%=results[0].boardId%>', '')">등록</button>
            <% } %>
		</p>
	</div>

	<script>
        function selectOne(theURL, winName, features, writId, mode) {
            theURL += '?writId=' + writId;
            window.open(theURL, winName, features);
        }

        function enroll(theURL, winName, features, boardId, mode) {
            theURL += '?boardId=' + boardId + '&?uid=81';
            window.open(theURL, winName, features);
        }
    </script>
    