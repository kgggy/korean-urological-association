                                <div class="paging" id="page_navi">
                                    <ul class="pagination customPaging">
                                        <% if(results.length > 0){ %>
                                        <li>
                                            <a href="/admin/m_board/all?boardId=<%= results[0].boardId %>&page=1<%= keepSearch %>"
                                                class="num">
                                                << </a> </li> <li>
                                                    <a <%if((page<last-1)||(page==1)){%><%} else {%>
                                                        href="/admin/m_board/all?boardId=<%= results[0].boardId %>&page=<%= parseInt(page) - 1 %><%= keepSearch %>"
                                                        class="num" <% } %>>
                                                        < </a> </li>
                                                            <% for(var i = 0; i < results.length / page_num; i++){  %>
                                                            <li class="paging_on">
                                                            <a href="/admin/m_board/all?boardId=<%= results[0].boardId %>&page=<%= i + 1 %><%= keepSearch %>"
