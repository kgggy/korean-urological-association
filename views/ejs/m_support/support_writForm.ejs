	</div>
</main>

<script type="text/javascript">
	var formObj = $("form[name='bannerWritForm']");
	$(document).ready(function () {
		//확장자 체크
		$("input:file[id='main']").change(function () {
			var str = $(this).val();
			var fileName = str.split('\\').pop().toLowerCase();
			// alert(fileName);
			checkFileName(fileName);
		});
		//ckeditor
		ClassicEditor
			.create(document.querySelector('#editor'), {
				language: 'ko'
			})
			.then(newEditor => {
				editor = newEditor;
			})
			.catch(error => {
				console.error(error);
			});

		// 등록
		$("#enroll_btn").on("click", function () {
			var supportImg = $("#main").val();
			var supportTitle = $("#supportTitle").val();
			var content = editor.getData();

			if (supportImg == '') {
				alert("배너이미지를 선택해주세요.");
				return false;
			}
			if (supportTitle == "") {
				alert("업체명을 입력하세요.");
				$("#editor").focus();
				return false;
			}
			if (confirm("등록하시겠습니까?") == true) {
				$('input[name=supportDetail]').attr('value', content);
				formObj.attr("action", "supportWrit");
				formObj.attr("method", "post");
				alert("등록이 완료되었습니다.");
				formObj.submit();
			} else {
				return;
			}
		});
	});

	//확장자 체크
	function checkFileName(str) {
      var ext = str.split('.').pop().toLowerCase();
      // alert(ext);
      if ($.inArray(ext, ['jpg', 'png', 'jpeg', 'gif']) == -1) {
         alert(ext + '파일은 업로드 하실 수 없습니다.');
         $("input:file[id='main']").val("");
      }
   }
</script>