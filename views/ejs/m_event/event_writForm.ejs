<main class="main">
   <!-- Breadcrumb-->
   <ol class="breadcrumb">
      <li class="breadcrumb-item">Home</li>
      <li class="breadcrumb-item">
         <a style="font-weight: bold;">행사관리</a>
      </li>
      <li class="breadcrumb-item active">행사 등록</li>
      <!-- Breadcrumb Menu-->
   </ol>

   <div class="container-fluid">
      <div class="animated fadeIn">
         <div class="row">
            <div class="col-lg-6">
               <div class="card">
                  <div class="card-header">
                     <i class="fa fa-align-justify"></i> 행사 등록
                  </div>
                  <div class="card-body">
                     <!-- 컨텐츠 -->
                     <form action="" id="eventWrite" method="post" enctype="multipart/form-data">
                        <input type="hidden" id="eventContent" name="eventContent" value="">
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">* 제목 *</label>
                           <div class="col-md-9">
                              <input class="form-control" id="eventTitle" type="text" name="eventTitle" value="" maxlength="300">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">* 내용 *</label>
                           <div class="col-md-9">
                              <textarea name="editor" class="editor" id="editor"></textarea>
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">* 장소 *</label>
                           <div class="col-md-9">
                              <input class="form-control" type="text" id="address_kakao" name="eventPlace"
                                 class="signup-input" />
                              <input class="form-control" type="text" id="address_detail" name="eventPlaceDetail"
                                 class="inputName signup-input" placeholder="상세주소를 입력해주세요" />
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">* 행사일시 *</label>
                           <div class="col-md-9">
                              <input class="form-control" id="eventDate" type="datetime-local" name="eventDate"
                                 value="">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">투표 시작일</label>
                           <div class="col-md-9">
                              <input class="form-control" id="startDate" type="date" name="startDate" value="">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">투표 마감일</label>
                           <div class="col-md-9">
                              <input class="form-control" id="endDate" type="date" name="endDate" value="">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">투표대상1</label>
                           <div class="col-md-9">
                              <select class="dropdown" name="eventTarget1">
                                 <option value="전체">전체</option>
                                 <option value="임원">임원</option>
                              </select>
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">투표대상2</label>
                           <div class="col-md-9">
                              <select class="dropdown" name="eventTarget2">
                                 <option value="전체">전체</option>
                                 <option value="동구">동구</option>
                                 <option value="서구">서구</option>
                                 <option value="남구">남구</option>
                                 <option value="북구">북구</option>
                                 <option value="중구">중구</option>
                                 <option value="수성구">수성구</option>
                                 <option value="달서구">달서구</option>
                                 <option value="달성구">달성구</option>
                              </select>
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label" for="text-input">알림 유무</label>
                           <div class="col-md-9">
                              <input type="checkbox" style='zoom:3.0;' name="eventPush" value="1">
                           </div>
                        </div>
                        <div class="form-group row">
                           <label class="col-md-2 col-form-label">첨부파일</label>
                           <div style="display: flex; flex-direction: column; gap: 25px; padding-left: 15px">
                              <input type="file" id="file" name="file">
                           </div>
                        </div>
                        <!--option 버튼  -->
                        <div class="option_button" style="padding-left: 1.25rem; margin-bottom: 15px;">
                           <div>
                              <button class="btn btn-block btn-outline-success" type="button"
                                 id="enroll_btn">등록</button>
                           </div>
                           <div>
                              <button class="btn btn-block btn-outline-danger" type="button"
                                 onclick="history.go(-1)">취소</button>
                           </div>
                        </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</main>

<script type="text/javascript">
   $(document).ready(function () {
      //ckeditor
      ClassicEditor
         .create(document.querySelector('#editor'), {
            language: 'ko'
         })
         .then(newEditor => {
            editor = newEditor;
         })
         .catch(error => {
            console.error(error);
         });

      //확장자 체크
      $("input:file[name='file']").change(function () {
         var str = $(this).val();
         var fileName = str.split('\\').pop().toLowerCase();
         // alert(fileName);
         checkFileName(fileName);
      });

      //확장자 체크
      function checkFileName(str) {
         var ext = str.split('.').pop().toLowerCase();
         // alert(ext);
         if ($.inArray(ext, ['jpg', 'png', 'jpeg', 'gif']) == -1) {
            alert(ext + '파일은 업로드 하실 수 없습니다.');
            $("input:file[name='file']").val("");
         }
      }

      $("#enroll_btn").click(function () {
         const eventTitle = $("#eventTitle").val();
         const content = editor.getData();
         const eventPlace = $("#address_kakao").val();
         const eventDate = $("#eventDate").val();

         if (eventTitle == "") {
            alert("제목을 입력하세요.");
            $("#referTitle").focus();
            return false;
         }
         if (content == "") {
            alert("내용을 입력하세요.");
            $("#editor").focus();
            return false;
         }
         if (eventPlace == "") {
            alert("장소를 입력하세요.");
            return false;
         }
         if (eventDate == "") {
            alert("행사일을 입력하세요.");
            $("#eventDate").focus();
            return false;
         }
         var convertContent = content.replace(/(<([^>]+)>)/ig,"");
			if (convertContent.length > 3000) {
				alert("입력 메세지는 3000자를 초과할 수 없습니다.");
				return false;
			}
         if (confirm("등록하시겠습니까?") == true) {
            $('input[name=eventContent]').attr('value', content);
            $("#eventWrite").attr("action", "eventWrite");
            $("#eventWrite").submit();
         } else {
            return;
         }
      });
   });
</script>